# Maintainer: Furkan Kardame <furkan@fkardame.com>

pkgname=buteo-syncfw-qml-git
_pkgname=buteo-syncfw-qml
pkgver=r30.f850e99
pkgrel=3
pkgdesc='Buteo sync framework client - QML bindings'
url='https://github.com/ubports/buteo-syncfw-qml'
arch=(x86_64 i686 armv7h aarch64)
license=()
depends=(qt5-base qt5-declarative)
makedepends=(git cmake cmake-extras-lomiri)
source=('git+https://github.com/ubports/buteo-syncfw-qml.git'
        '0001-Remove-unused-slot.patch')
sha256sums=('SKIP'
            'SKIP')

pkgver() {
 cd ${_pkgname}
 printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd ${_pkgname}
  patch -p1 -i ../0001-Remove-unused-slot.patch
}

build() {
  cd ${_pkgname}
  mkdir -p build
  cd build
  cmake ../ -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" -DCMAKE_INSTALL_SYSCONFDIR=/etc -DCMAKE_INSTALL_LOCALSTATEDIR=/var
  make

}

package() {
  cd ${_pkgname}/build
  make DESTDIR="${pkgdir}/" install
}
