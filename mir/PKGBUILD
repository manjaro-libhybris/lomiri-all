pkgname=(mir)
pkgver=2.3.2
pkgrel=1
pkgdesc="Canonical's display server"
url='https://gitlab.com/ubports/development/core/mir'
arch=(x86_64 i686 aarch64)
license=(GPL LGPL)
depends=(gtest-lomiri boost-libs capnproto google-glog gflags libglvnd  liburcu lttng-ust libepoxy libxml++2.6 nettle libinput libxkbcommon python-pillow freetype2 libevdev protobuf python-dbus python-gobject hicolor-icon-theme libxcursor yaml-cpp)
makedepends=(git glm doxygen cmake boost gcovr gtest-lomiri lcov valgrind python-dbusmock umockdev wlcs-lomiri)
source=("git+https://gitlab.com/ubports/development/core/mir"
