# Maintainer: Philippe Proulx <pproulx@efficios.com>
# Contributor: Manuel Mendez <mmendez534 at gmail dot com>

pkgname=lttng-tools
pkgver=2.11.0
pkgrel=1
pkgdesc='LTTng tracing control tools'
arch=(i686 x86_64 aarch64)
url='http://lttng.org/'
license=(GPL2 LGPL2.1)
provides=('lttng')
source=("http://lttng.org/files/$pkgname/$pkgname-$pkgver.tar.bz2")
makedepends=('asciidoc' 'xmlto')
depends=('popt' 'liburcu' 'libxml2')

sha1sums=('aa7e5784ed6c7fe68f91d16edf497cbd761564c2')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure --prefix=/usr --sysconfdir=/etc --enable-man-pages --without-lttng-ust
    make -j8
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make install DESTDIR="${pkgdir}"
}
