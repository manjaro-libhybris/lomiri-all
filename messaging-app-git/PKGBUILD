# Maintainer: Furkan Kardame <furkan@fkardame.com>

pkgname=messaging-app-git
_pkgname=messaging-app
pkgver=r3325.5eb82a7e
pkgrel=1
pkgdesc='Messaging App is the official SMS app'
url='https://github.com/ubports/messaging-app'
arch=(x86_64 i686 armv7h aarch64)
license=()
depends=(history-service-git telephony-service address-book-service-git qt5-es2-base gsettings-qt content-hub-git thumbnailer-git qt5-pim-git ubuntu-ui-toolkit-git qt5-systems libqofono-qt5 address-book-app-git address-book-service-git qt5-es2-multimedia)
makedepends=(git cmake cmake-extras-lomiri)
source=('git+https://github.com/ubports/messaging-app.git#branch=xenial')
sha256sums=('SKIP')

pkgver() {
 cd ${_pkgname}
 printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  cd ${_pkgname}
  # patches here
}

build() {
  cd ${_pkgname}
  mkdir -p build
  cd build
  cmake ../ -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCMAKE_INSTALL_LIBDIR="lib/" -DCMAKE_INSTALL_SYSCONFDIR=/etc -DCMAKE_INSTALL_LOCALSTATEDIR=/var
  make
}

package() {
  cd ${_pkgname}/build
  make DESTDIR="${pkgdir}/" install
}
